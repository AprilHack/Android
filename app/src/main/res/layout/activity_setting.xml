<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_setting"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"></LinearLayout>

    <!--人物选择-->

    <!--难度选择-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="4"
        android:orientation="horizontal">
        <!--人物图像-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/men1" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/men2" />
        </LinearLayout>
        <!--单选按钮组-->
        <RadioGroup
            android:id="@+id/group_Men"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioMen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="四月"
                android:textColor="#000" />

            <RadioButton
                android:id="@+id/radioMen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="五月"
                android:textColor="#000" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="难度选择"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="小渣渣"
                android:textColor="#000" />

            <RadioButton
                    android:id="@+id/level_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食人花"
                    android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/level_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精神病"
                android:textColor="#000"/>

            <RadioButton
                android:id="@+id/level_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疯人院"
                android:textColor="#000"/>

        </LinearLayout>
    </LinearLayout>

    <!--底部按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/btn_Dialog_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:text="保存"
             />

        <Button
            android:id="@+id/btn_Dialog_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:text="返回"
            />
    </LinearLayout>

</LinearLayout>